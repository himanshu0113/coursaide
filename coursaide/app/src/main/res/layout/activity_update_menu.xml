<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/dark"
    tools:context="com.example.ubantu.coursaide_admin.MainActivity_MT17015"
    >



<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/dark"
    tools:context="com.example.ubantu.coursaide_admin.MainActivity_MT17015"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
       android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
       >

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="431dp"
                android:orientation="vertical"
                android:weightSum="5"
                >

            <Button
                android:id="@+id/update_tt_nav"
                style="@style/button_same_as_bg"
                android:layout_width="match_parent"

                android:layout_height="70dp"
                android:drawableLeft="@drawable/ic_update_black_24dp"


                android:text="Update an existing course"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="92dp" />
            <View style="@style/Divider"/>

            <Button
                android:id="@+id/ad_c_nav"
                style="@style/button_same_as_bg"
                android:layout_width="match_parent"
                android:layout_height="70dp"

                android:drawableLeft="@drawable/ic_add_white_24dp"
                android:text="Add a course"


                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="92dp" />
            <View style="@style/Divider"/>

            <Button
                android:id="@+id/remove_c_nav"
                style="@style/button_same_as_bg"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:drawableLeft="@drawable/ic_delete_forever_white_24dp"

                android:text="Remove a course"

                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="92dp" />
            <View style="@style/Divider"/>


        </LinearLayout>
    </LinearLayout>
    </ScrollView>


</RelativeLayout>




