<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/dark"
    tools:context="com.example.ubantu.coursaide_admin.MainActivity_MT17015"
    >



<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/dark"
    tools:context="com.example.ubantu.coursaide_admin.MainActivity_MT17015"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="30dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/white_rounde_rec">

        <Space
            android:layout_width="10dp"
            android:layout_height="20dp"
            android:layout_weight="1" >
        </Space>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ac_Cname"
                style="@style/form_text"
                android:layout_width="1dp"
                android:layout_height="25dp"

                android:layout_weight="1"
                android:text="Course Name" />

            <Spinner
                android:id="@+id/rcCnameSpinner"
                style="@style/form_text"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.826"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.044" />
        </LinearLayout>
        <Space
            android:layout_width="10dp"
            android:layout_height="20dp"
            android:layout_weight="1" >
        </Space>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ac_Ccode_spinner"
                style="@style/form_text"
                android:layout_width="78dp"
                android:layout_height="25dp"

                android:layout_weight="1"
                android:text="Course code"
               />

            <TextView
                android:id="@+id/rcCcodeEditText"
                style="@style/form_text"
                android:layout_width="125dp"
                android:layout_height="31dp"

                android:layout_weight="1"
             />
        </LinearLayout>
        <Space
            android:layout_width="10dp"
            android:layout_height="20dp"
            android:layout_weight="1" >
        </Space>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ac_splz"
                style="@style/form_text"
                android:layout_width="78dp"
                android:layout_height="wrap_content"

                android:layout_weight="1"
                android:text="Specialization"

            />

            <TextView
                android:id="@+id/rcSplEditText2"
                style="@style/form_text"
                android:layout_width="126dp"
                android:layout_height="30dp"
                android:layout_weight="1"
    />
        </LinearLayout>
        <Space
            android:layout_width="10dp"
            android:layout_height="20dp"
            android:layout_weight="1" >
        </Space>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ac_credit"
                style="@style/form_text"
                android:layout_width="78dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/credits"

                />

            <TextView
                android:id="@+id/rccreditEditText"
                style="@style/form_text"
                android:layout_width="126dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                />
        </LinearLayout>
        <Space
            android:layout_width="10dp"
            android:layout_height="20dp"
            android:layout_weight="1" >
        </Space>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ac_bucket"
                style="@style/form_text"
                android:layout_width="78dp"
                android:layout_height="wrap_content"

                android:layout_weight="1"
                android:text="Bucket"


             />

            <TextView
                android:id="@+id/rcBucketEditText2"
                style="@style/form_text"
                android:layout_width="122dp"
                android:layout_height="32dp"
                android:layout_weight="1"
             />
        </LinearLayout>
        <Space
            android:layout_width="10dp"
            android:layout_height="20dp"
            android:layout_weight="1" >
        </Space>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ac_branch"
                style="@style/form_text"
                android:layout_width="77dp"
                android:layout_height="wrap_content"

                android:layout_weight="1"
                android:text="Branch"

                />

            <TextView
                android:id="@+id/rcBranchEditText"
                style="@style/form_text"
                android:layout_width="125dp"
                android:layout_height="31dp"

                android:layout_weight="1"
               />
        </LinearLayout>
        <Space
            android:layout_width="10dp"
            android:layout_height="20dp"
            android:layout_weight="1" >
        </Space>
        <Button
            android:id="@+id/rcDeleteButton"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/background_login"
            android:text="DELETE"
            android:textColor="#eeeeee"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>
</ScrollView>
</RelativeLayout>


